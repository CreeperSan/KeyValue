<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:hint="@string/keyValueAddKeyHint"
            android:id="@+id/keyValueAddKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:hint="@string/keyValueAddValueHint"
            android:id="@+id/keyValueAddValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:hint="@string/keyValueAddDescription"
            android:id="@+id/keyValueAddDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <FrameLayout
        android:id="@+id/keyValueAddIconLayout"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="start|center"
            android:text="@string/tableAddIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/keyValueAddIconIcon"
            android:src="@drawable/ic_attachment_black_24dp"
            android:layout_gravity="end|center"
            android:layout_width="46dp"
            android:layout_height="46dp" />


    </FrameLayout>

    <Button
        android:layout_gravity="center"
        android:text="@string/keyValueAddButton"
        android:id="@+id/keyValueAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>